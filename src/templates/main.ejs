<!DOCTYPE html>
<html>
    <head>
        <title>Books</title>
        <%- include('bootstrap') %>
        <link rel="stylesheet" href="/style.css"/>
    </head>
    <body>
        <%- include('navbar') %>
        
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Authors
                        </th>
                        <th>
                            Link
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Visualizzare una tabella con i libri della libreria -->
                    <% books.forEach(function(book) { %>
                        <tr>
                            <td>
                                <%= book.title %>
                            </td>
                            <td>
                                <%= book.authors.join(', ') %>
                            </td>
                            <td>
                                <a href="/books/<%= book.id %>">Detail</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </body>
</html>